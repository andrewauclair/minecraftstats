<project name="junit-example">
  <property name="main.build.dir" value="build/main"/>
  <property name="main.src.dir" value="minecraftstats/src/stats"/>
  <property name="test.build.dir" value="build/test"/>
  <property name="test.src.dir" value="minecraftstats/src/stats/spec"/>

  <path id="classpath.test">
    <pathelement location="minecraftstats/lib/junit-4.12.jar"/>
    <pathelement location="minecraftstats/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${main.build.dir}"/>
  </path>

  <target name="compile">
    <mkdir dir="${main.build.dir}"/>
    <javac srcdir="${main.src.dir}" destdir="${main.build.dir}" includeantruntime="false" classpath="minecraftstats/lib/gson-2.8.0.jar">
		<exclude name="**/spec/" />
	</javac>
  </target>

  <target name="test-compile" depends="compile">
    <mkdir dir="${test.build.dir}"/>
    <javac srcdir="${test.src.dir}" destdir="${test.build.dir}" includeantruntime="false">
        <classpath refid="classpath.test"/>
    </javac>
  </target>

  <target name="test" depends="test-compile">
    <junit printsummary="on" haltonfailure="yes" fork="true">
        <classpath>
          <path refid="classpath.test"/>
          <pathelement location="${test.build.dir}"/>
        </classpath>
        <formatter type="brief" usefile="false" />
        <batchtest>
            <fileset dir="${test.src.dir}" includes="**/*Specification.java" />
        </batchtest>
    </junit>
  </target>
</project>